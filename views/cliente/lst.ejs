<%- include('../cabecalho.ejs') %>
<form method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Pesquisar</label>
        <input name="pesquisar" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Pesquisar">
    </div>
    <input class="btn btn-primary" type="submit" value="Pesquisar">
</form>
<br>
<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>CPF</th>
        <th>RG</th>
        <th>Telefone</th>
        <th>Foto</th>
        <th>Editar</th>
        <th>Deletar</th>
    </tr>
    <% Clientes.forEach(function(cliente){ %>
        <tr>
            <td><%=cliente._id %></td>
            <td><%=cliente.nome %></td>
            <td><%=cliente.email %></td>
            <td><%=cliente.cpf %></td>
            <td><%=cliente.rg %></td>
            <td><%=cliente.telefone %></td>
            <td>
                <img style="max-width: 60px;" src="/fotos/<%=cliente.foto %>" alt="Foto do Cliente">
            </td>
            <td>
                <a href="/admin/cliente/edt/<%=cliente._id %>">Editar</a>
            </td>
            <td>
                <a href="/admin/cliente/del/<%=cliente._id %>">Excluir</a>
            </td>
        </tr>
    <% }) %>
</table>
<%- include('../rodape.ejs') %>